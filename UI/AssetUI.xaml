<Window x:Class="Asset.UI.AssetUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Asset.UI"
        mc:Ignorable="d"
        Title="ABS Wizz"
        Height="600"
        Width="960"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <!-- Title bar -->
            <RowDefinition Height="40"/>
            <!-- Main content -->
            <RowDefinition Height="*"/>
            <!-- Status bar -->
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>

        <!-- Top blue title area -->
        <Border Grid.Row="0" Background="#0067D8">
            <DockPanel Margin="10,0">
                <TextBlock DockPanel.Dock="Left"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White">
                    ABS Wizz
                    <Run FontSize="12" FontWeight="Normal"> • Assign, review, and export ABS data</Run>
                </TextBlock>

                <TextBlock DockPanel.Dock="Right"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Foreground="White"
                           Text="Project"/>
            </DockPanel>
        </Border>

        <!-- Main area -->
        <Grid Grid.Row="1" Margin="10,10,10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Room Details -->
            <GroupBox Grid.Column="0" Header="Room Details" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Include Linked Models Checkbox -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <CheckBox x:Name="CB_IncludeLinkedModels" 
                                  Content="Include Linked Models" 
                                  IsChecked="False"
                                  VerticalAlignment="Center"
                                  Checked="CB_IncludeLinkedModels_Changed" 
                                  Unchecked="CB_IncludeLinkedModels_Changed"/>
                        <Button Content="ℹ" 
                                Width="20" 
                                Height="20"
                                Margin="5,0,0,0"
                                ToolTip="Show room sources"
                                Click="ShowRoomSources_Click"
                                FontWeight="Bold"
                                FontSize="10"/>
                    </StackPanel>

                    <!-- Search / filter box -->
                    <TextBox Grid.Row="1" 
                             x:Name="TB_SearchRoom"
                             Margin="5" 
                             Height="22"
                             TextChanged="TB_SearchRoom_TextChanged"/>

                    <!-- Room list -->
                    <ListBox Grid.Row="2" 
                             Margin="5" 
                             x:Name="LV_Room">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding RoomNumber}" 
                                               FontWeight="Bold"/>
                                    <TextBlock Text="{Binding RoomName}" 
                                               FontSize="10"/>
                                    <TextBlock FontSize="9" 
                                               Foreground="Gray">
                                        <Run Text="Source:"/>
                                        <Run Text="{Binding LinkName}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Room Source Label -->
                    <Border Grid.Row="3" 
                            Margin="5,0,5,5" 
                            Padding="5"
                            Background="#F0F0F0"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="3">
                        <TextBlock x:Name="LB_RoomSource" 
                                   FontSize="10"
                                   TextWrapping="Wrap"
                                   Text="Select a room to view details"/>
                    </Border>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="4" 
                                Orientation="Horizontal" 
                                Margin="5" 
                                HorizontalAlignment="Left">
                        <Button Width="90" 
                                Margin="0,5,5,0" 
                                Content="Assign ABS" 
                                Click="Assign_ABS"/>
                        <Button Width="110" 
                                Margin="0,5,0,0" 
                                Content="Highlight in Model" 
                                Click="Highlight_Model"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Space Details -->
            <GroupBox Grid.Column="1" Header="Space Details" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Margin="5,5,5,0"
                               Text="Elements inside the selected room"/>

                    <ListBox Grid.Row="1" 
                             Margin="5" 
                             Name="LV_Element">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Category.Name}" 
                                               FontSize="9" 
                                               Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Element count label -->
                    <TextBlock Grid.Row="2" 
                               x:Name="LB_ElementCount"
                               Margin="5,0,5,5" 
                               FontSize="10"
                               Foreground="Gray"
                               Text="0 elements"/>
                </Grid>
            </GroupBox>

            <!-- Asset Code and Categories -->
            <GroupBox Grid.Column="2" Header="Asset Code and Categories">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Asset code row -->
                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal" 
                                Margin="5">
                        <TextBlock VerticalAlignment="Center" 
                                   Margin="0,0,5,0" 
                                   Text="Asset Code:"/>
                        <TextBox Width="100" 
                                 Margin="0,0,5,0" 
                                 Name="TB_Asset"/>

                        <TextBlock VerticalAlignment="Center" 
                                   Margin="0,0,5,0" 
                                   Text="Asset Level:"/>
                        <TextBox Width="100" 
                                 Margin="0,0,5,0" 
                                 Name="TB_Level"/>
                    </StackPanel>

                    <!-- Room Number Validation -->
                    <GroupBox Grid.Row="1" 
                              Header="Room Number Validation" 
                              Margin="5">
                        <StackPanel Orientation="Horizontal" 
                                    Margin="5">
                            <TextBlock VerticalAlignment="Center" 
                                       Margin="0,0,5,0" 
                                       Text="Room #:"/>
                            <TextBox x:Name="TB_RoomNumberValidation" 
                                     Width="100" 
                                     Margin="0,0,5,0"/>
                            <Button Content="Validate" 
                                    Width="70"
                                    Click="ValidateRoom_Click"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Validation Result -->
                    <Border Grid.Row="2" 
                            Margin="5" 
                            Padding="8"
                            Background="#FFFACD"
                            BorderBrush="#FFD700"
                            BorderThickness="1"
                            CornerRadius="3"
                            Visibility="Collapsed"
                            x:Name="ValidationResultPanel">
                        <StackPanel>
                            <TextBlock x:Name="LB_ValidationResult" 
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       TextWrapping="Wrap"
                                       Text="Validation result will appear here"/>
                            <TextBlock x:Name="LB_ValidationDetails" 
                                       FontSize="10"
                                       Margin="0,5,0,0"
                                       TextWrapping="Wrap"
                                       Foreground="DarkGreen"
                                       Text="Details..."/>
                        </StackPanel>
                    </Border>

                    <!-- Asset list -->
                    <!-- Row 3 content -->
                    <Grid Grid.Row="3" Margin="5">
                        <Grid.ColumnDefinitions>
                            <!-- left = list, right = label/text/combobox -->
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left side: categories with checkboxes -->
                        <Grid Grid.Column="1" Margin="0,0,5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <Label Grid.Row="0" Content="Categories List" FontWeight="Bold" Padding="0"/>

                            <!-- List with checkboxes -->
                            <ListView Grid.Row="1" x:Name="LB_Category" Width="Auto">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding Name}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                        </Grid>

                        <!-- Right side: label + text + combo -->
                        <StackPanel Grid.Column="0" Margin="5,0,0,0">
                            <Label Content="Parameter Name:"/>
                            <TextBox Width="120" Name="TB_ParameterName"/>
                            <Label Content="Data Type:"/>
                            <ComboBox Width="120" Name="CB_DataType"/>
                            <Label Content="Group Parameter under:"/>
                            <ComboBox Width="120" Name="CB_GroupParam"/>
                            <CheckBox Margin="0,10,0,0" 
                                      x:Name="CB_Instance" 
                                      Content="Instance" 
                                      IsChecked="False"/>
                            <CheckBox Margin="0,10,0,0" 
                                      x:Name="CB_Type" 
                                      Content="Type" 
                                      IsChecked="False"/>
                            <Button Width="100" 
                                    Margin="0,15,0,0" 
                                    Content="Create Parameter" 
                                    Click="Button_Click"/>
                        </StackPanel>

                    </Grid>


                </Grid>
            </GroupBox>
        </Grid>

        <!-- Status bar -->
        <Border Grid.Row="2" Background="#E6E6E6">
            <DockPanel Margin="5,0">
                <TextBlock DockPanel.Dock="Left"
                           VerticalAlignment="Center"
                           FontSize="11"
                           x:Name="LB_Status"
                           Text="Ready"/>
                <TextBlock DockPanel.Dock="Left"
                           FontSize="11"
                           VerticalAlignment="Center" Margin="600,0,0,0"
                           x:Name="LB_UserInfo"
                           Text="mdshahnawaz9570@gmail.com" Width="200"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>