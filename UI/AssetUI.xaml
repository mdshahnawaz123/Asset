<Window x:Class="Asset.UI.AssetUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Asset.UI"
        mc:Ignorable="d"
        Title="ABS Wizz"
        Height="550"
        Width="960"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <!-- Title bar -->
            <RowDefinition Height="40"/>
            <!-- Main content -->
            <RowDefinition Height="*"/>
            <!-- Status bar -->
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>

        <!-- Top blue title area -->
        <Border Grid.Row="0" Background="#0067D8">
            <DockPanel Margin="10,0">
                <TextBlock DockPanel.Dock="Left"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White">
                    ABS Wizz
                    <Run FontSize="12" FontWeight="Normal"> • Assign, review, and export ABS data</Run>
                </TextBlock>

                <TextBlock DockPanel.Dock="Right"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Foreground="White"
                           Text="Project"/>
            </DockPanel>
        </Border>

        <!-- Main area -->
        <Grid Grid.Row="1" Margin="10,10,10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Room Details -->
            <GroupBox Grid.Column="0" Header="Room Details" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search / filter box -->
                    <TextBox Margin="5" Height="22"/>

                    <!-- Room list -->
                    <ListBox Grid.Row="1" Margin="5" x:Name="LV_Room"/>



                    <!-- Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5" HorizontalAlignment="Left">
                        <Button Width="90" Margin="0,5,5,0" Content="Assign ABS" Click="Assign_ABS"/>
                        <Button Width="110" Margin="0,5,0,0" Content="Highlight in Model" Click="Highlight_Model"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Space Details -->
            <GroupBox Grid.Column="1" Header="Space Details" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Margin="5,5,5,0"
                               Text="Elements inside the selected room"/>
                    <ListBox Grid.Row="1" Margin="5" Name="LV_Element"/>
                </Grid>
            </GroupBox>

            <!-- Asset Code and Categories -->
            <GroupBox Grid.Column="2" Header="Asset Code and Categories">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Asset code row -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <TextBlock VerticalAlignment="Center" Margin="0,0,5,0" Text="Asset Code:"/>
                        <TextBox Width="100" Margin="0,0,5,0" Name="TB_Asset"/>

                        <TextBlock VerticalAlignment="Center" Margin="0,0,5,0" Text="Asset Level:"/>
                        <TextBox Width="100" Margin="0,0,5,0" Name="TB_Level"/>
                    </StackPanel>

                    <!-- Asset list -->
                    <ListBox Grid.Row="1" Margin="5"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Status bar -->
        <Border Grid.Row="2" Background="#E6E6E6">
            <DockPanel Margin="5,0">
                <TextBlock DockPanel.Dock="Left"
                           VerticalAlignment="Center"
                           FontSize="11"
                           Text="Ready"/>
                <TextBlock DockPanel.Dock="Right"
                           VerticalAlignment="Center"
                           FontSize="11"
                           Text="User"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>